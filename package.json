{
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/liamross/psiagram",
  "homepage": "https://www.psiagram.org",
  "scripts": {
    "start": "parcel demo/index.html",
    "test": "jest --config scripts/test/jest.config.js",
    "lint": "tslint -p . -t verbose",
    "build": "yarn clean:lib && tsc",
    "clean": "yarn clean:dist & yarn clean:lib",
    "deepclean": "yarn clean:cache & yarn clean:coverage & yarn clean",
    "clean:dist": "rimraf dist",
    "clean:lib": "rimraf lib",
    "clean:coverage": "rimraf coverage",
    "clean:cache": "rimraf .cache",
    "clean:node": "rimraf node_modules"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "jest": "^23.1.0",
    "lerna": "^2.11.0",
    "parcel-bundler": "^1.8.1",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.1"
  }
}
