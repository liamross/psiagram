{
  "compilerOptions": {
    // Output code.
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    // Other.
    "baseUrl": ".",
    "outDir": "lib",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    // Code checking.
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "interval-resizer/lib/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
